{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es2020",
        "moduleResolution": "node",
        "outDir": "dist",
        "baseUrl": ".",
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "paths": {
            "@/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts"
    ]
}